<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Overtime App Alert", sticky: false, time: 5000, image: :warning) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Overtime App Error", sticky: false, time: 5000, image: :error) %>
<% elsif flash[:success] %>
  <%= js add_gritter(flash[:success], title: "Overtime App Success", sticky: false, time: 5000, image: :success) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Overtime App Notification", sticky: false, time: 5000, image: :notice) %>
<% end %>
